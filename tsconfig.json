{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@assets/*": ["./assets/*"],
      "@common/*": ["./src/common/*"],
      "@models/*": ["./src/models/*"],
    },
    "typeRoots": ["./src/@types", "node_modules/@types"]
  }
}
